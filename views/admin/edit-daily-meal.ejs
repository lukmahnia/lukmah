<%- include('../partials/header', { title: 'تعديل الوجبة اليومية', activePage: 'daily-meals', admin: true }) %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">تعديل: <%= meal.name %></h1>
    <a href="/admin/daily-meals" class="btn btn-secondary">العودة إلى الوجبات</a>
</div>

<%- include('../partials/messages') %>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">تفاصيل الوجبة</h6>
            </div>
            <div class="card-body">
                <form action="/admin/daily-meals/<%= meal.id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">اسم الوجبة</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= meal.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">الوصف</label>
                        <textarea class="form-control" id="description" name="description" rows="3"><%= meal.description %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">عناصر الوجبة</h6>
            </div>
            <div class="card-body">
                <h5>إضافة عنصر جديد</h5>
                <form action="/admin/daily-meals/<%= meal.id %>/items" method="POST" class="mb-4">
                    <div class="input-group">
                        <select class="form-select" name="menuItemId" required>
                            <option value="" disabled selected>اختر عنصراً...</option>
                            <% allItems.forEach(item => { %>
                                <option value="<%= item.id %>"><%= item.name %></option>
                            <% }); %>
                        </select>
                        <button class="btn btn-success" type="submit">إضافة</button>
                    </div>
                </form>

                <h5>العناصر الحالية</h5>
                <ul class="list-group">
                    <% if (mealItems && mealItems.length > 0) { %>
                        <% mealItems.forEach(item => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= item.name %>
                                <form action="/admin/daily-meals/<%= meal.id %>/items/<%= item.id %>?_method=DELETE" method="POST" onsubmit="return confirm('هل أنت متأكد من حذف هذا العنصر من الوجبة؟');">
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li class="list-group-item text-center">لا توجد عناصر في هذه الوجبة.</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
