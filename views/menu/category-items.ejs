<%- include('../partials/header', { title: category.name, activePage: 'menu' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><%= category.name %></h1>
        <p class="text-muted"><%= category.description || '' %></p>
    </div>
    <a href="/menu" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-right"></i> العودة للقائمة
    </a>
</div>

<% if (items && items.length > 0) { %>
    <div class="row">
        <% items.forEach(item => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <img src="<%= item.image_url || '/images/default-food.jpg' %>" class="card-img-top" alt="<%= item.name %>">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title"><%= item.name %></h5>
                                <p class="card-text"><%= item.description || '' %></p>
                                <% if (item.calories) { %>
                                    <span class="badge bg-secondary"><%= item.calories %> سعرة</span>
                                <% } %>
                            </div>
                            <div class="text-end">
                                <h5 class="text-primary"><%= item.price %> ريال</h5>
                                <% if (user) { %>
                                    <button class="btn btn-sm btn-outline-primary" onclick="addToCart(<%= item.id %>)">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="alert alert-info text-center">
        <i class="bi bi-inbox fs-1"></i>
        <h4>لا توجد عناصر</h4>
        <p>لا توجد عناصر في هذه الفئة حالياً</p>
    </div>
<% } %>

<%- include('../partials/footer') %>

<script>
    function addToCart(itemId) {
        fetch('/cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ menu_item_id: itemId, quantity: 1 })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('تمت إضافة المنتج إلى السلة');
                // تحديث عداد السلة
                const cartCount = document.querySelector('.badge.bg-danger');
                if (cartCount) {
                    cartCount.textContent = parseInt(cartCount.textContent) + 1;
                }
            } else {
                alert('حدث خطأ أثناء إضافة المنتج إلى السلة');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('حدث خطأ أثناء إضافة المنتج إلى السلة');
        });
    }
</script>