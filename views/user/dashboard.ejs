<%- include('../partials/header', { title: 'لوحة التحكم', activePage: 'dashboard' }) %>

<div class="row">
    <div class="col-md-12">
        <h2>مرحباً بك، <%= user.name %></h2>
        <p class="text-muted">آخر تسجيل دخول: <%= new Date().toLocaleDateString('ar-SA') %></p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">الطلبات الحالية</h5>
                <p class="card-text display-4"><%= activeOrdersCount || 0 %></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">الاشتراكات النشطة</h5>
                <p class="card-text display-4"><%= activeSubscriptionsCount || 0 %></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">نقاط الولاء</h5>
                <p class="card-text display-4"><%= user.loyalty_points || 0 %></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">العناوين المحفوظة</h5>
                <% if (addressesCount > 0) { %>
                    <a href="/user/addresses" class="btn btn-light btn-sm">إدارة العناوين</a>
                <% } else { %>
                    <p class="card-text">لا توجد عناوين</p>
                    <a href="/user/addresses" class="btn btn-light">أضف عنوانك الأول</a>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">الطلبات الأخيرة</h5>
                <a href="/user/orders" class="btn btn-sm btn-outline-primary">عرض الكل</a>
            </div>
            <div class="card-body">
                <% if (recentOrders && recentOrders.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>رقم الطلب</th>
                                    <th>التاريخ</th>
                                    <th>المبلغ</th>
                                    <th>الحالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentOrders.forEach(order => { %>
                                    <tr>
                                        <td><%= order.id %></td>
                                        <td><%= new Date(order.order_date).toLocaleDateString('ar-SA') %></td>
                                        <td><%= order.total_amount %> ريال</td>
                                        <td>
                                            <% if (order.status === 'Pending') { %>
                                                <span class="badge bg-warning">قيد الانتظار</span>
                                            <% } else if (order.status === 'Preparing') { %>
                                                <span class="badge bg-info">قيد التحضير</span>
                                            <% } else if (order.status === 'Ready') { %>
                                                <span class="badge bg-primary">جاهز</span>
                                            <% } else if (order.status === 'Delivered') { %>
                                                <span class="badge bg-success">تم التوصيل</span>
                                            <% } else if (order.status === 'Cancelled') { %>
                                                <span class="badge bg-danger">ملغي</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">لا توجد طلبات سابقة</p>
                <% } %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">الاشتراكات النشطة</h5>
                <a href="/user/subscriptions" class="btn btn-sm btn-outline-primary">عرض الكل</a>
            </div>
            <div class="card-body">
                <% if (activeSubscriptions && activeSubscriptions.length > 0) { %>
                    <div class="list-group">
                        <% activeSubscriptions.forEach(subscription => { %>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1"><%= subscription.plan_name %></h6>
                                    <small><%= new Date(subscription.end_date).toLocaleDateString('ar-SA') %></small>
                                </div>
                                <p class="mb-1">الوجبات المتبقية: <%= subscription.remaining_meals %></p>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-muted">لا توجد اشتراكات نشطة</p>
                    <a href="/user/subscriptions" class="btn btn-primary">اشترك الآن</a>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>