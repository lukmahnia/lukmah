<%- include('../partials/header', { title: 'القائمة', activePage: 'menu' }) %>

<div class="text-center mb-5">
    <h1>قائمتنا</h1>
    <p class="lead">استكشف مجموعة متنوعة من الأطباق اللذيذة</p>
</div>

<div class="row">
    <% categories.forEach(category => { %>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <img src="<%= category.image_url || '/images/default-category.jpg' %>" class="card-img-top" alt="<%= category.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= category.name %></h5>
                    <p class="card-text"><%= category.description || '' %></p>
                    <a href="/menu/category/<%= category.id %>" class="btn btn-primary">عرض التفاصيل</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<%- include('../partials/footer') %>