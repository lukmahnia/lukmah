<%- include('../partials/header', { title: 'سلة التسوق', activePage: 'cart' }) %>

<div class="row">
    <div class="col-md-8">
        <h2>سلة التسوق</h2>
        
        <% if (cartItems && cartItems.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>المنتج</th>
                            <th>السعر</th>
                            <th>الكمية</th>
                            <th>المجموع</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cartItems.forEach(item => { %>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="<%= item.image_url || '/images/default-food.jpg' %>" class="img-thumbnail me-2" width="80" height="80" alt="<%= item.name %>">
                                        <div>
                                            <h6><%= item.name %></h6>
                                        </div>
                                    </div>
                                </td>
                                <td><%= item.price %> ريال</td>
                                <td>
                                    <div class="input-group" style="width: 120px;">
                                        <button class="btn btn-outline-secondary btn-sm" onclick="updateQuantity(<%= item.id %>, <%= item.quantity - 1 %>)">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="text" class="form-control text-center" value="<%= item.quantity %>" readonly>
                                        <button class="btn btn-outline-secondary btn-sm" onclick="updateQuantity(<%= item.id %>, <%= item.quantity + 1 %>)">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </td>
                                <td><%= (item.price * item.quantity).toFixed(2) %> ريال</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart(<%= item.id %>)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-between mt-3">
                <a href="/menu" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-right"></i> متابعة التسوق
                </a>
                <button class="btn btn-outline-danger" onclick="clearCart()">
                    <i class="bi bi-trash"></i> تفريغ السلة
                </button>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">
                <i class="bi bi-cart-x fs-1"></i>
                <h4>سلة التسوق فارغة</h4>
                <p>أضف بعض المنتجات إلى سلة التسوق للمتابعة</p>
                <a href="/menu" class="btn btn-primary">تصفح القائمة</a>
            </div>
        <% } %>
    </div>
    
    <div class="col-md-4">
        <% if (cartItems && cartItems.length > 0) { %>
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">ملخص الطلب</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>المجموع الفرعي:</span>
                        <span><%= subtotal.toFixed(2) %> ريال</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>رسوم التوصيل:</span>
                        <span><%= deliveryFee.toFixed(2) %> ريال</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>الضريبة:</span>
                        <span><%= tax.toFixed(2) %> ريال</span>
                    </div>
                    <% if (discount > 0) { %>
                        <div class="d-flex justify-content-between mb-2 text-success">
                            <span>الخصم:</span>
                            <span>-<%= discount.toFixed(2) %> ريال</span>
                        </div>
                    <% } %>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>الإجمالي:</strong>
                        <strong><%= total.toFixed(2) %> ريال</strong>
                    </div>
                    
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="كود الخصم" id="promoCode">
                            <button class="btn btn-outline-secondary" type="button" onclick="applyPromoCode()">تطبيق</button>
                        </div>
                    </div>
                    
                    <a href="/order/checkout" class="btn btn-primary w-100">إتمام الطلب</a>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">عنوان التوصيل</h5>
                </div>
                <div class="card-body">
                    <% if (defaultAddress) { %>
                        <p>
                            <%= defaultAddress.street %><br>
                            <%= defaultAddress.city %>, <%= defaultAddress.state %><br>
                            <%= defaultAddress.zip_code %>
                        </p>
                        <a href="/addresses" class="btn btn-sm btn-outline-primary">تغيير العنوان</a>
                    <% } else { %>
                        <p class="text-muted">لم يتم تحديد عنوان افتراضي</p>
                        <a href="/addresses" class="btn btn-sm btn-primary">إضافة عنوان</a>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>

<script>
    function updateQuantity(itemId, quantity) {
        if (quantity < 1) {
            removeFromCart(itemId);
            return;
        }
        
        fetch(`/cart/${itemId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ quantity })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('حدث خطأ أثناء تحديث الكمية');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('حدث خطأ أثناء تحديث الكمية');
        });
    }
    
    function removeFromCart(itemId) {
        if (confirm('هل أنت متأكد من إزالة هذا المنتج من السلة؟')) {
            fetch(`/cart/${itemId}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('حدث خطأ أثناء إزالة المنتج');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('حدث خطأ أثناء إزالة المنتج');
            });
        }
    }
    
    function clearCart() {
        if (confirm('هل أنت متأكد من تفريغ السلة؟')) {
            fetch('/cart/clear', {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('حدث خطأ أثناء تفريغ السلة');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('حدث خطأ أثناء تفريغ السلة');
            });
        }
    }
    
    function applyPromoCode() {
        const promoCode = document.getElementById('promoCode').value;
        
        if (!promoCode) {
            alert('الرجاء إدخال كود الخصم');
            return;
        }
        
        fetch('/order/apply-promo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ promo_code: promoCode })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert(data.message || 'كود الخصم غير صالح');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('حدث خطأ أثناء تطبيق كود الخصم');
        });
    }
</script>